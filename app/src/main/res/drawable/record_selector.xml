<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_focused="true"
        android:state_pressed="true" >

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <solid android:color="@color/record_on"/>
            <stroke android:width="@dimen/width_white_circle_rec_button" android:color="@android:color/white" />
        </shape>

    </item>

    <item
        android:state_focused="false"
        android:state_pressed="true" >

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <solid android:color="@color/record_on"/>
            <stroke android:width="@dimen/width_white_circle_rec_button" android:color="#fff" />
        </shape>

    </item>

    <item
        android:state_focused="true"
        android:state_pressed="false" >

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <solid android:color="@color/record_off" />
            <stroke android:width="@dimen/width_white_circle_rec_button" android:color="@android:color/white" />
        </shape>

    </item>

    <item
        android:state_focused="false"
        android:state_pressed="false" >

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <solid android:color="@color/record_off"/>
            <stroke android:width="@dimen/width_white_circle_rec_button" android:color="@android:color/white" />
        </shape>

    </item>

</selector>